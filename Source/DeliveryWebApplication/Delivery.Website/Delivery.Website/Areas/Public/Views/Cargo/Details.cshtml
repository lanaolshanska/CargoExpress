@model Delivery.Models.Cargo

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}


<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Departure city
        </dt>

        <dd>
            @Html.ActionLink(Model.Route.OrigWarehouse.City, "Details", "Warehouse", new { area = "Admin", id = Model.Route.OriginWarehouseId }, new { })
        </dd>

        <dt>
            Destination city
        </dt>

        <dd>
            @Html.ActionLink(Model.Route.DestWarehouse.City, "Details", "Warehouse", new { area = "Admin", id = Model.Route.DestinationWarehouseId }, new { })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Route.Distance) (km)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Route.Distance)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Sender)
        </dt>

        <dd>
            @Html.ActionLink(Model.Sender.FirstName + " " + Model.Sender.LastName, "Details", "Contact", new { area = "Admin", id = Model.SenderContactId }, new { })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Recipient)
        </dt>

        <dd>
            @Html.ActionLink(Model.Recipient.FirstName + " " + Model.Recipient.LastName, "Details", "Contact", new { area = "Admin", id = Model.RecipientContactId }, new { })
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Weight) (kg)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Weight)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Volume) (m<sup>3</sup>)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Volume)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>

        @if (Model.DriverId != null)
        {
            <dt>
                @Html.DisplayNameFor(model => model.Driver)
            </dt>

            <dd>
                @Html.ActionLink(Model.Driver.FirstName + " " + Model.Driver.LastName, "Details", "Driver", new { area = "Admin", id = Model.DriverId }, new { })
            </dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "List")
</p>
