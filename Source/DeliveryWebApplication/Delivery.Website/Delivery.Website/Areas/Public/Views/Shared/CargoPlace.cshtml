@model Delivery.Website.Areas.Public.Models.CargoPlaceModel
<script src="@Url.Content("~/Scripts/dropdown.js")" type="text/javascript"></script>

<div class="place">
    <div class="form-group">
        @Html.LabelFor(model => model.StateId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.StateId, new SelectList(Model.States, "Id", "Name"), "Select State", new { @class = "form-control state dropDownField" })
            <p class="errmessage dropdownErr"> Select state </p>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CityId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CityId, new SelectList(Model.Cities, "Id", "Name"), "Select City", new { @class = "form-control city dropDownField" })
            <p class="errmessage dropdownErr"> Select city </p>
        </div>
    </div>
</div>