@model Delivery.Models.Driver
@using Delivery.Website.Helpers;

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_NavigationLayout.cshtml";
}

<h2>@Model.FirstName&nbsp;@Model.LastName</h2>

<div>
    <hr />
    <div style="float:left;width:40%;">
        @Html.Image(Model.Id, "250px", "350px")
    </div>
    <div style="float:left;width:60%;">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LastName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Birthdate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Birthdate)
            </dd>

            @if (Model.CellPhone != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.CellPhone)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CellPhone)
                </dd>
            }

            @if (Model.Address != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Address)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>
            }

            @if (Model.StartedDrivingYear != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.StartedDrivingYear)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.StartedDrivingYear)
                </dd>
            }
            <dt>
                @Html.DisplayNameFor(model => model.TripsTotal)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TripsTotal)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.HasCriminalRecord)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.HasCriminalRecord)
            </dd>

            @if (Model.Status != null)
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Status)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Status)
                </dd>
            }
        </dl>
    </div>
</div>